{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "baseUrl": "./src",
  "paths": {
    "@/*": ["*"],
    "@ui/*": ["src/shared/ui/*"],
    "@api/*": ["api/*"],
    "@config/*": ["config/*"],
    "@hooks/*": ["hooks/*"]
  },
  "include": ["vite.config.ts"]
}
